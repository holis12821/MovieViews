<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieViews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.MovieViews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Style TextView-->
    <style name="TextViewBold" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/titillium_web_bold</item>
    </style>

    <style name="TextViewBold_Dark" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:fontFamily">@font/titillium_web_bold</item>
    </style>

    <style name="TextViewRegular" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="TextViewMatchParent" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="TextViewMatchParentWrap" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/titillium_web_regular</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <!--Style BottomNavigationView-->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/space_text_medium_large</item>
        <item name="android:textColor">@color/battleship_grey</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/space_text_medium_large</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
    </style>


    <!--Style TabLayout-->
    <style name="CustomTabLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
        <item name="tabTextColor">@color/primary_dark</item>
        <item name="tabIndicatorColor">@color/primary_dark</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/space_text_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>