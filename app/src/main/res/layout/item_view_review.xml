<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_margin="@dimen/space_medium_small"
        app:cardCornerRadius="@dimen/radius_medium"
        app:elevation="@dimen/elevation_small_medium"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_review"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_super_small">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image_view"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tv_review_by"
                tools:src="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_review_by"
                style="@style/TextViewRegular"
                android:layout_marginStart="@dimen/space_super_small"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/circle_image_view"
                tools:text="A review by NeoTechMovies" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_writing_date"
                style="@style/TextViewRegular"
                android:layout_marginStart="@dimen/space_super_small"
                app:layout_constraintStart_toEndOf="@+id/circle_image_view"
                android:layout_marginTop="@dimen/space_medium"
                app:layout_constraintTop_toBottomOf="@+id/tv_review_by"
                app:layout_constraintLeft_toLeftOf="@+id/tv_review_by"
                app:layout_constraintRight_toRightOf="@+id/tv_review_by"
                tools:text="Written by NeoTechMovies on July 19, 2023" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rating_bar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_medium"
                app:layout_constraintTop_toBottomOf="@+id/tv_writing_date"
                app:layout_constraintLeft_toLeftOf="@+id/tv_writing_date" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_review"
                style="@style/TextViewMatchParentWrap"
                android:maxLines="4"
                android:ellipsize="end"
                android:textSize="@dimen/space_text_large_medium"
                android:layout_marginTop="@dimen/space_medium"
                app:layout_constraintTop_toBottomOf="@+id/rating_bar"
                app:layout_constraintLeft_toLeftOf="@+id/rating_bar"
                tools:text="I do not know how to explain the movie. I think I can say, it looks like a 90s CGI movie that was not done well, it is a nice concept, but really poorly executed. I will give it a 6 being really nice." />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>